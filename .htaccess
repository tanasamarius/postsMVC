<IfModule mod_rewrite.c>
  RewriteEngine on
  RewriteRule ^$ public/ [L]
  RewriteRule (.*) public/$1 [L]
</IfModule>

#this htaccess will rewrite the url no to show /public/
#without this link will be like http://localhost/mvc/public for index.php
#with this on will be like http://localhost/mvc for index.php
